@model UserLinkViewModel

<li class="nav-item navbar-dropdown dropdown-user dropdown right-align-dropdown">
    <a class="nav-link dropdown-toggle hide-arrow p-0" href="javascript:void(0);" data-bs-toggle="dropdown">
        <img src="/images/50_@Model.Image" alt="@Model.Name"
             style="height: 32px !important; width: 32px !important; border-radius: 50% !important;" />
@*         @Model.Name *@
    </a>
    <ul class="dropdown-menu dropdown-menu-end ">
        <li>
            <a class="dropdown-item" href="javascript:void();">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-2">
                        <div class="avatar avatar-online">
                            <img src="~/images/50_@Model.Image" alt="" style="height: 32px !important; width: 32px !important; border-radius: 50% !important;">
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-0 small">@Model.Name</h6>
                        <small class="text-muted"></small>
                    </div>
                </div>
            </a>
        </li>
        <li>
            <div class="dropdown-divider"></div>
        </li>
        <li>
            <a class="dropdown-item" href="@Url.Action("Profile", "Account", new { area = "" })">
                <i class="ri-user-3-line ri-22px me-2"></i>
                <span class="align-middle">My Profile</span>
            </a>
        </li>
        @if (User.IsInRole($"admin"))
        {
            <li>
                <a class="dropdown-item" href="@Url.Action("Index", "Users", new { area = "Admin" })">
                    <i class="ri-settings-4-line ri-22px me-2"></i>
                    <span class="align-middle">Admin Panel</span>
                </a>
            </li>
@*             <li><a class="destination" href="@Url.Action("Index", "Users", new { area = "Admin" })">Admin Panel</a></li> *@
        }
        <li>
            <div class="dropdown-divider"></div>
        </li>
@*         <li>
            @using (Html.BeginForm("Logout", "Account", FormMethod.Post))
            {
                <button class="destination">← Logout</button>
            }
        </li> *@
        <li>
            <div class="d-grid px-4 pt-2 pb-1">
                @using (Html.BeginForm("Logout", "Account", FormMethod.Post))
                {
                    <button class="btn btn-danger d-flex">
                        <small class="align-middle">Logout</small>
                        <i class="ri-logout-box-r-line ms-2 ri-16px"></i>
                    </button>
                }
            </div>
        </li>
    </ul>
</li>