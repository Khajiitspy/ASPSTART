@model ASPSTART.Models.Cate.CateEditViewModel

@{
    ViewData["Title"] = "CateEdit";
    string imageView = String.IsNullOrEmpty(Model.ViewImage) ? "/DefualtImage.svg": $"/images/400_{Model.ViewImage}";
}

<h1>CateEdit</h1>

<h4>CateEditViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CateEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <img src="@Model.ViewImage" width="100%" id="imagePreview" />
                </div>
                <div class="col-md-9">
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label"></label>
                        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*">
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
